{
  "name": "rajdeep-savani-portfolio",
  "version": "1.0.0",
  "description": "Rajdeep Savani's Professional Portfolio",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd portfolio-frontend && npm run dev",
    "dev:backend": "cd portfolio-backend && ./mvnw spring-boot:run",
    "build": "cd portfolio-frontend && npm run build",
    "install:all": "npm install && cd portfolio-frontend && npm install"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.10"
  }
}
